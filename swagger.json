{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "THE CLINIC API",
    "description": "THE CLINIC API demo server",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "clinicx-api.herokuapp.com",
  "basePath": "",
  "tags": [
    {
      "name": "THE CLINIC API",
      "description": "API for THE CLINIC API"
    }
  ],
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/user/login": {
      "parameters": [
        {
          "name": "password",
          "in": "body",
          "required": true,
          "description": "password",
          "type": "string"
        }
      ],
      "post": {
        "tags": ["THE CLINIC API"],
        "description": "Login site",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Login response",
            "schema": {
              "$ref": "#/definitions/loginResponse"
            }
          }
        }
      }
    },
    "/customer/create": {
      "post": {
        "tags": ["THE CLINIC API"],
        "description": "Create a new customer",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "required": true,
            "description": "name of customer",
            "type": "string"
          },
          {
            "name": "phone",
            "in": "body",
            "required": true,
            "description": "phone of customer",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Create customer response"
          }
        }
      }
    },
    "/customer/update": {
      "put": {
        "tags": ["THE CLINIC API"],
        "description": "Updarw a customer",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "required": true,
            "description": "name of customer",
            "type": "string"
          },
          {
            "name": "phone",
            "in": "body",
            "required": true,
            "description": "phone of customer",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Update customer response",
            "schema": {
              "$ref": "#/definitions/UDResponse"
            }
          }
        }
      }
    },
    "/customer/list": {
      "get": {
        "tags": ["THE CLINIC API"],
        "summary": "Get all customers",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "page number",
            "type": "string"
          },
          {
            "name": "start",
            "in": "query",
            "required": false,
            "description": "start number",
            "type": "string"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "limit number(quantity record of one page)",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Array of customer data"
          }
        }
      }
    },
    "/customer/delete/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": false,
          "description": "customer id",
          "type": "number"
        }
      ],
      "delete": {
        "tags": ["THE CLINIC API"],
        "summary": "Delete customer by id",
        "responses": {
          "200": {
            "description": "Delete customer successully",
            "schema": {
              "$ref": "#/definitions/UDResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "loginResponse": {
      "required": ["success"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "token": {
          "type": "string",
          "schema": {
            "$ref": "#/definitions/token"
          }
        },
        "message": {
          "type": "string"
        }
      }
    },
    "token": {
      "properties": {
        "expiredDate": {
          "type": "number"
        }
      }
    },
    "UDResponse": {
      "required": ["success"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
